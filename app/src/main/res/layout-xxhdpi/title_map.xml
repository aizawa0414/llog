<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMapTitle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="right"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/textMapTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/white"
        android:visibility="invisible" />

    <Button
        android:id="@+id/buttonMapTop"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_weight="0"
        android:text="@string/top" />

    <Button
        android:id="@+id/buttonMapSearch"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_weight="0"
        android:text="@string/search"
        android:textSize="13sp" />

    <Button
        android:id="@+id/buttonMapMap"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_weight="0"
        android:text="@string/map"
        android:textSize="13sp" />

    <Button
        android:id="@+id/buttonMapSatellite"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_weight="0"
        android:text="@string/aerial_photo"
        android:textSize="13sp" />

    <Button
        android:id="@+id/buttonMapHybrid"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-5dp"
        android:layout_weight="0"
        android:text="@string/map_photo"
        android:textSize="13sp" />

</LinearLayout>